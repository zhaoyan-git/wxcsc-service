    <resultMap type="WxcxcDevice" id="WxcxcDeviceResult">
        <result property="id"    column="id"    />
        <result property="projectId"    column="project_id"    />
        <result property="name"    column="name"    />
        <result property="manufacturer"    column="manufacturer"    />
