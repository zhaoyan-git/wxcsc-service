    <delete id="deleteWxcxcDeviceSensorByDeviceIds" parameterType="String">
        delete from wxcxc_device_sensor where device_id in 
        <foreach item="deviceId" collection="array" open="(" separator="," close=")">
            #{deviceId}
        </foreach>
    </delete>

    <delete id="deleteWxcxcDeviceSensorByDeviceId" parameterType="Long">
        delete from wxcxc_device_sensor where device_id = #{deviceId}
    </delete>

    <insert id="batchWxcxcDeviceSensor">
        insert into wxcxc_device_sensor( id, device_id, name, icon_file, sort, unit, type, slave_unit_id, slave_code, slave_address_hi, slave_address_lo, slave_amount_hi, slave_amount_lo, cycle_time, del_flag, create_by, create_time, update_by, update_time) values
		<foreach item="item" index="index" collection="list" separator=",">
            ( #{item.id}, #{item.deviceId}, #{item.name}, #{item.iconFile}, #{item.sort}, #{item.unit}, #{item.type}, #{item.slaveUnitId}, #{item.slaveCode}, #{item.slaveAddressHi}, #{item.slaveAddressLo}, #{item.slaveAmountHi}, #{item.slaveAmountLo}, #{item.cycleTime}, #{item.delFlag}, #{item.createBy}, #{item.createTime}, #{item.updateBy}, #{item.updateTime})
        </foreach>
    </insert>

    <select id="selectWxcxcDeviceListByBusinessId" parameterType="Long" resultMap="WxcxcDeviceResult">
        SELECT * FROM wxcxc_device WHERE del_flag = 0 AND project_id IN (SELECT id FROM wxcxc_project WHERE business_id = 1 AND del_flag = 0);
    </select>
